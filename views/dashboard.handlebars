<div class="bg-white border rounded-5">
    
    <section class="p-4 text-center w-100">
      <a href="/create"><button type="button" class="btn btn-primary" id="createPostButton">Create Post</button></a>
    </section>
    
    
</div>

{{#each post}}
    <div class="col-md-12">
        <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
            <strong class="d-inline-block mb-2 text-primary">{{user.name}}</strong>
            <h3 class="mb-0">{{title}}</h3>
            <div class="mb-1 text-muted">{{dateCreated}}</div>
            <p class="card-text mb-auto">{{text}}</p>
            <a href="post/{{id}}" class="stretched-link">Continue reading</a>
            </div>
        </div>
    </div>
{{/each}}

<script src="/js/createpost.js"></script>